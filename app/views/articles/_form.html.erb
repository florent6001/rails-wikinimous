<%= form_with model: @article do |f| %>
  <div class="form-group mt-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", rows: 5, value: strip_tags(article.content) %>
  </div>
  <div class="form-group mt-3">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back", :back, class: "mt-3 d-inline-flex" %>
